# Wrangler Configuration Template
# Copy to wrangler.toml and fill in your values
# DO NOT commit wrangler.toml - it's in .gitignore

name = "og-image"
compatibility_date = "2024-01-01"
compatibility_flags = ["nodejs_compat"]
pages_build_output_dir = "out"

# Build configuration
[build]
command = "npm run build"

# D1 Database binding (optional - for My Templates & Favorites sync)
# Create database: wrangler d1 create og-image-db
# Then uncomment and fill in database_id:
# [[d1_databases]]
# binding = "OG_DB"
# database_name = "og-image-db"
# database_id = "<your-database-id>"

[env.production]
name = "og-image"

[env.preview]
name = "og-image-preview"

# ============================================
# DEPLOYMENT NOTES
# ============================================
# Environment variables (set via GitHub Secrets for CI/CD):
#   - CLOUDFLARE_API_TOKEN
#   - CLOUDFLARE_ACCOUNT_ID
#
# Local deployment:
#   export CLOUDFLARE_API_TOKEN=xxx
#   export CLOUDFLARE_ACCOUNT_ID=xxx
#   npx wrangler pages deploy out --project-name=og-image
